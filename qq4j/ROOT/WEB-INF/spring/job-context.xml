<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd">
        
    <bean name="mokouRestartJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="org.qq4j.job.QQRobotStartJob" />
        <property name="jobDataAsMap">
            <map>
                <entry key="name" value="mokou" />
            </map>
        </property>
    </bean>
    <bean id="mokouRestartJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="mokouRestartJob" />
        <property name="cronExpression" value="0 0 * * * ?" />
    </bean>
    
    
    <bean name="aliceRestartJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="org.qq4j.job.QQRobotStartJob" />
        <property name="jobDataAsMap">
            <map>
                <entry key="name" value="alice" />
            </map>
        </property>
    </bean>
    <bean id="aliceRestartJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="aliceRestartJob" />
        <property name="cronExpression" value="0 0 * * * ?" />
    </bean>
    
    <bean name="cirnoRestartJob" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="org.qq4j.job.QQRobotStartJob" />
        <property name="jobDataAsMap">
            <map>
                <entry key="name" value="cirno" />
            </map>
        </property>
    </bean>
    <bean id="cirnoRestartJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="cirnoRestartJob" />
        <property name="cronExpression" value="0 0 * * * ?" />
    </bean>
    
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="cirnoRestartJobTrigger" />
                <ref bean="aliceRestartJobTrigger" />
                <ref bean="mokouRestartJobTrigger" />
            </list>
        </property>
    </bean>
</beans>